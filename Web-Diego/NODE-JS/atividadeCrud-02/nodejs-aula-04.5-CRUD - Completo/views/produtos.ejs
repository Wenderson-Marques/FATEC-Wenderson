<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Cadastrar produto</h1>
        </div>
        <div class="card-body">
            <form action="/produtos/new" method="POST">
                <label>Nome do produto:</label>
                <input type="text" name="nome" id="nome" placeholder="Insira o nome do produto" class="form-control" required>
                <label>CPF:</label>
                <input type="text" name="cpf" id="cpf" placeholder="Insira o CPF do produto" class="form-control" required>
                <label>Endereço do produto:</label>
                <input type="text" name="endereco" id="endereco" placeholder="Insira o endereço do produto" class="form-control" required>
                <br>
                <button class="btn btn-success" class="refresh">Cadastrar</button>
            </form>
            <hr>
        </div>
    </div>
</div>
<br>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Produto</h1>
        </div>
        <div class="card-body">
            <table>
                <thead>
                    <tr>
                        <th></th>
                        <th>Nome:</th>
                        <th>CPF:</th>
                        <th>Endereço:</th>
                        <th style="text-align: center;" colspan="2">Ações:</th>
                    </tr>
                </thead>
                <tbody>
                    <% produtos.forEach(produto => { %>
                        <tr>
                            <td><img width="30px" src="imgs/avatar.png" alt="Produtos"></td>
                            <td><%= produto.nome %></td>
                            <td><%= produto.cpf %></td>
                            <td><%= produto.endereco %></td>
                            <td><a style="color: orange;" href="/produtos/edit/<%= produto._id %>" >Editar</a></td>
                            <td><a style="color: red;" href="/produtos/delete/<%= produto._id %>" onclick="return confirm('Confirma a exclusão do registro?')"class="refresh">Excluir</a></td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include ('partials/footer.ejs') %>